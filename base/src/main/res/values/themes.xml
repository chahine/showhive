<resources>
    <!-- Base application theme. -->
    <style name="Theme.ShowHive.Base" parent="@style/Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.ShowHive" parent="Theme.ShowHive.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.ShowHive.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ShowHive.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
