<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="80dp"
        android:layout_height="120dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?colorSecondary"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/line1"
        style="?textAppearanceSubtitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="@dimen/spacing_standard"
        android:paddingEnd="@dimen/spacing_standard"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/line2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardView"
        app:layout_constraintTop_toTopOf="@id/cardView"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="Riverdale - S01E03"
        />

    <TextView
        android:id="@+id/line2"
        style="?textAppearanceBody1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingStart="@dimen/spacing_standard"
        android:paddingTop="@dimen/spacing_xsmall"
        android:paddingEnd="@dimen/spacing_standard"
        android:paddingBottom="@dimen/spacing_xsmall"
        app:layout_constraintBottom_toTopOf="@+id/line3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/line1"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        tools:text="Chapter Twenty-Seven: The Hills Have Eyes"
        />

    <TextView
        android:id="@+id/line3"
        style="?textAppearanceCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="@dimen/spacing_standard"
        android:paddingEnd="@dimen/spacing_standard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/line1"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        tools:text="NBC - TV-14 - 10:00 am"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
